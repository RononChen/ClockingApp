<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.activity.settings.Overview">
    <TextView
        android:id="@+id/overview_title"
        android:text="Appperçu général"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
/>
    <LinearLayout
        android:id="@+id/overview_app_version_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/overview_app_version_label"
            android:text="Version de l'application:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/overview_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/overview_device_name_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/overview_device_name_label"
            android:text="Nom de l'appareil:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/overview_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/overview_device_manufacturer_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/overview_device_manufacrurer_label"
            android:layout_width="wrap_content"
            android:text="Fabricant de l'apppareil:"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/overview_device_manufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/overview_version_name_layout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/overview_version_name_label"
                android:text="Nom de version du système d'exploitation:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/overview_version_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    <LinearLayout
        android:id="@+id/overview_sdk_version_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/overview_sdk_version_label"
            android:layout_width="wrap_content"
            android:text="Version de SDK du système d'exploitation"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/overview_sdk_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <Button
        android:id="@+id/overview_copy"
        android:text="Copier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />

</LinearLayout>