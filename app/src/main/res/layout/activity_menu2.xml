<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".View.activity.Menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

<LinearLayout
    android:id="@+id/menu_title_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    >
    <ImageButton
        android:id="@+id/menu_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Menu" />
</LinearLayout>

<ScrollView
    android:id="@+id/menu_items"
   android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/menu_setting"
        android:layout_width="wrap_content"
        android:text="Paramètres"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/ic_baseline_settings_20" />
        <TextView
            android:id="@+id/menu_dark_mode"
            android:layout_width="wrap_content"
            android:text="Mode sombre"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_dark_mode_24" />
        <TextView
            android:id="@+id/menu_language"
            android:layout_width="wrap_content"
            android:text="Langue"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_language_24" />
        <TextView
            android:id="@+id/menu_memory"
            android:layout_width="wrap_content"
            android:text="Libérer de l'espace"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_clear_24" />
        <TextView
            android:id="@+id/menu_help"
            android:layout_width="wrap_content"
            android:text="Aide"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_help_24" />

        <TextView
            android:id="@+id/menu_about"
            android:layout_width="wrap_content"
            android:text="A propos"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_library_books_24" />
        <TextView
            android:id="@+id/menu_problem"
            android:layout_width="wrap_content"
            android:text="Signaler un problème"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_report_problem_24" />
        <TextView
            android:id="@+id/menu_quit"
            android:layout_width="wrap_content"
            android:text="Quitter"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_logout_24" />

    </LinearLayout>


</ScrollView>
</LinearLayout>