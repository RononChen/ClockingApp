<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.activity.settings.MainSetting">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setting_about_app"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:text="A propos de l'application"
            android:id="@+id/setting_about_title"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Patager l'application"
            android:id="@+id/setting_share"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_share_25" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Partager l'application via code QR"
            android:id="@+id/setting_share_with_qr"
            android:layout_height="wrap_content"
            app:drawableLeftCompat="@drawable/ic_baseline_qr_code_scanner_25" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Aperçu détaillé de l'application de l'application"
             android:id="@+id/setting_overview"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Version de l'application"
            android:id="@+id/setting_version"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_phone_android_25" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Documentation utilisateurs"
            android:id="@+id/setting_docs"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_menu_book_25" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Effacer le cache"
            android:id="@+id/setting_cache"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_delete_sweep_25" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setting_about_establishment"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:text="A propos de l'établissement"
            android:id="@+id/setting_establishment"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Nom"
            android:id="@+id/setting_name"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_mode_edit_25" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Email"
            android:id="@+id/setting_mail"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_alternate_email_25" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Photo"
            android:id="@+id/setting_picture"
            android:drawableStart="@drawable/ic_baseline_picture_in_picture_25"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Description"
            android:id="@+id/setting_description"
            android:drawableStart="@drawable/ic_baseline_description_25"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setting_employee_account"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:text="Paramètres de compte employé"
            android:id="@+id/setting_account"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Gestion de username"
            android:id="@+id/setting_username"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_supervised_user_circle_25" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Gestion de mot de passe"
            android:drawableStart="@drawable/ic_baseline_password_25"
            android:id="@+id/setting_password"
            android:layout_height="wrap_content"/>
           </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setting_employee_notifications_title"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:text="Notifications employé"
            android:id="@+id/setting_employee"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_edit_notifications_25" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Lors de l'ajout"
            android:id="@+id/setting_add"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_person_add_25" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Lors de la suppression"
            android:id="@+id/setting_delete"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_person_remove_25" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Lors de la modification"
            android:id="@+id/setting_update"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_edit_attributes_25" />
            </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setting_others"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:text="Autres"
            android:id="@+id/setting_other"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Mode sombre"
            android:id="@+id/setting_dark"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_dark_mode_25" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Langues"
            android:id="@+id/setting_languages"
            android:drawableStart="@drawable/ic_baseline_language_25"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Signaler un problème"
            android:id="@+id/setting_problem"
            android:drawableStart="@drawable/ic_baseline_report_problem_25"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="De l'aide?"
            android:id="@+id/setting_help"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_help_outline_25" />

         </LinearLayout>
    </LinearLayout>

</ScrollView>