<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".View.activity.SimpleEmployeeMenu"
    android:id="@+id/LinearLayout02"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/menu_clock"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:drawableTop="@drawable/ic_baseline_timer_50"
            android:layout_marginStart="25dp"
            android:background="@color/colorPrimary"
            android:paddingTop="20dp"
            android:text="@string/menu_clock_button"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/menu_my_presence_statistics"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_marginStart="25dp"
            android:drawableTop="@drawable/ic_baseline_pie_chart_50"
            android:layout_marginEnd="25dp"
            android:paddingTop="20dp"
            android:background="@color/colorPrimary"
            android:text="@string/presence_stat"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/presence_report"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="120dp"
            android:layout_height="137dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_baseline_timer_50"
            android:paddingTop="20dp"
            android:text="@string/my_presence_report" />
        <Button
            android:id="@+id/settings"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:paddingTop="20dp"
            android:drawableTop="@drawable/ic_baseline_app_settings_alt_50"
            android:background="@color/colorPrimary"
            android:text="@string/settings"
            android:gravity="center"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>


</LinearLayout>

