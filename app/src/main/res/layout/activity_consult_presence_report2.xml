<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".View.activity.ConsultPresenceReport">
        <TextView
            android:id="@+id/report_date"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/period"
            android:layout_width="wrap_content"/>

        <TableLayout
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/report_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="22dp"
            android:background="#f1f1f1">

                <TableRow
                    android:scrollX="@dimen/bt_stroke"
                    android:id="@+id/days"
                    android:layout_marginBottom="1dp"
                    android:layout_marginHorizontal="1dp"
                    android:background="@color/black"
                    >
                        <TextView
                            android:id="@+id/monday"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:layout_marginBottom="1dp"
                            android:layout_marginHorizontal="1dp"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="@string/monday"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tuesday"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="@string/tuesday"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginHorizontal="1dp"/>
                        <TextView
                            android:id="@+id/wednesday"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="@string/wednesday"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginHorizontal="1dp"/>
                        <TextView
                            android:id="@+id/thursday"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="@string/thursday"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginHorizontal="1dp"/>
                        <TextView
                            android:id="@+id/friday"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="@string/friday"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginHorizontal="1dp"/>
                        <TextView
                            android:id="@+id/satursday"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="@string/satursday"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginHorizontal="1dp"/>
                        <TextView
                            android:id="@+id/sunday"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="@string/sunday"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginEnd="1dp"/>
                </TableRow>



        </TableLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/report_previous"
            android:text="@string/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/report_next"
            android:text="@string/next"
            android:layout_width="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_height="wrap_content"
            style="?android:attr/buttonBarButtonStyle" />
        </LinearLayout>
</LinearLayout>